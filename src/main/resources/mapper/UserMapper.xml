<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.UserMapper">
    <select id="selectByIdPassword" resultType="integer">
        select count(*) from userdata where id=#{id} and password=#{password}
    </select>


    <delete id="deleteByIdPassword">
        delete from userdata where id=#{id} and password=#{password}
    </delete>

    <insert id="insert">
        insert into userdata() values(null,#{name},#{id},#{phone},#{address},#{password})
    </insert>
</mapper>